<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A237E"
        android:id="@+id/buttons"
        android:backgroundTint="#fff"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fixtures"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:backgroundTint="#000"
            android:id="@+id/fixtures"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@id/buttons"
            android:background="#1A237E"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Points Table"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:backgroundTint="#000"
            android:id="@+id/pts"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@id/buttons"
            android:background="#1A237E"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="News"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:backgroundTint="#000"
            android:id="@+id/news"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/buttons"
        android:id="@+id/lineview"
        android:background="#1A237E"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:id="@+id/buttons1"
        android:layout_below="@id/lineview"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SCORECARDS"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:backgroundTint="#000"
            android:id="@+id/scorecards"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@id/buttons"
            android:background="#1A237E"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FAVORITE TEAM"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:backgroundTint="#000"
            android:id="@+id/favoriteteam"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@id/buttons"
            android:background="#1A237E"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QUIZ"
            android:textColor="#fff"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:backgroundTint="#000"
            android:id="@+id/quizgame"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ball1"
        android:scaleType="fitXY"
        android:id="@+id/image"
        android:layout_below="@id/buttons1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="40sp"
        android:textColor="#fff"
        android:text="ICC CRICKET WC 2019"
        android:gravity="center_horizontal"
        android:fontFamily="monospace"
        />

</RelativeLayout>